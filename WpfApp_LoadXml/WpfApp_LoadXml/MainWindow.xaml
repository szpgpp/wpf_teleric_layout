        <Button Content="Button6" Tag="6" HorizontalAlignment="Left" Margin="139,194,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click" RenderTransformOrigin="-2.588,-0.742"/>
        <Button Content="Button7" Tag="7" HorizontalAlignment="Left" Margin="139,236,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click" RenderTransformOrigin="-2.588,-0.742"/>
        <Button Content="Button8" Tag="8" HorizontalAlignment="Left" Margin="139,260,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click" RenderTransformOrigin="-2.588,-0.742"/>


        <telerik:RadTreeView x:Name="RTV1" HorizontalAlignment="Left" Height="296" Margin="330,56,0,0" VerticalAlignment="Top" Width="321"
                             ItemTemplate="{StaticResource H1}" ItemsSource="{Binding XPath=root}" Background="LightGreen">

        </telerik:RadTreeView>
        <Button Content="Load.1." HorizontalAlignment="Left" Margin="684,56,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>
        <Button Content="Change.1." HorizontalAlignment="Left" Margin="684,98,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_2"/>
        <Button Content="RemoveAll 1" HorizontalAlignment="Left" Margin="684,134,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_3"/>
        <Button Content="Load.2." HorizontalAlignment="Left" Margin="684,180,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_4"/>
        <Button Content="Change.2." HorizontalAlignment="Left" Margin="684,222,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_5"/>
